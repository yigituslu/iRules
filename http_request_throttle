when RULE_INIT {
    # Configurable parameters
    set static::window_seconds 10
    set static::threshold_ratio 1.1
    set static::queue_delay_ms 200
}

when HTTP_REQUEST {
    set pool_name [LB::server pool]
    if { $pool_name eq "" } {
        set pool_name "default"
    }

    # Use per-second timestamp as key
    set now [clock seconds]
    set key "req_count:${pool_name}:${now}"

    # Increment counter for current second
    set count [table incr $key 1]
    table timeout $key [expr { $static::window_seconds + 2 }]

    # Compute moving average over last 10 seconds
    set total 0
    set samples 0
    for {set i 0} {$i < $static::window_seconds} {incr i} {
        set ts [expr {$now - $i}]
        set val [table lookup "req_count:${pool_name}:${ts}"]
        if { $val ne "" } {
            incr total $val
            incr samples
        }
    }
    if { $samples > 0 } {
        set avg [expr { double($total) / $samples }]
    } else {
        set avg 0
    }

    # Detect >10% surge
    if { $avg > 0 && $count > ($avg * $static::threshold_ratio) } {
        # Queue (throttle) the request instead of dropping
        after $static::queue_delay_ms
        log local0. "Throttled request for pool $pool_name: current=$count avg=$avg"
    }
}
